{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "rootDir": "src/backend",           // Points to backend source files
    "outDir": "build",          // Output directory for compiled backend files
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
  },
  "include": ["src/backend/**/*.ts"],   // Only include backend files
  "exclude": ["node_modules", "dist"]
}